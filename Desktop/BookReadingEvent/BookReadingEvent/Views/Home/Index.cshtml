@{
    ViewData["Title"] = "Home Page";
}
@model List<Event>
<div class="container">
    <div class="row">
        <div class="col-6">
            <h1>Upcoming Events</h1>
            <table class="table table-striped table-responsive">
                <thead>
                    <th>Title</th>
                    <th>Date</th>
                    <th>Type</th>
                </thead
                <tbody>
                    @foreach (var obj in Model)
                    {
                        if (obj.Date > DateTime.Now && obj.Type == "Public")
                        {
                            <tr>
                                <td><a asp-controller="Event" asp-action="EventDetails" asp-route-id="@obj.Id">@obj.Title</a></td>
                                <td>@obj.Date.ToString("d")</td>
                                <td>@obj.Type</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>



        </div>
        <div class="col-6">
            <h1>Past Events</h1>
            <table class="table table-striped table-responsive">
                <thead>
                <th>Title</th>
                <th>Date</th>
                <th>Type</th>
                </thead>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        if (obj.Date < DateTime.Now && obj.Type == "Public")
                        {
                            <tr>
                                <td><a asp-controller="Event" asp-action="EventDetails" asp-route-id="@obj.Id">@obj.Title</a></td>
                                <td>@obj.Date.ToString("d")</td>
                                <td>@obj.Type</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>



    </div>



</div>


