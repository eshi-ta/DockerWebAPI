@model Event
<h1>Edit Event</h1>



<form method="post" asp-action="Edit">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" type="text" class="form-control" placeholder="Enter Title">
    </div>
    <div class="form-group">
        <label asp-for="Date">Date</label>
        <input asp-for="Date" type="date" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Location">Location</label>
        <input asp-for="Location" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="StartTime">StartTime</label>
        <select asp-for="StartTime" class="form-control">
            <option value="00">00</option>
            <option value="01">1</option>
            <option value="02">2</option>
            <option value="03">3</option>
            <option value="04">4</option>
            <option value="05">5</option>
            <option value="06">6</option>
            <option value="07">7</option>
            <option value="08">8</option>
            <option value="09">9</option>
            <option value="10">10</option>
            <option value="11">11</option>
            <option value="12">12</option>
            <option value="13">13</option>
            <option value="14">14</option>
            <option value="15">15</option>
            <option value="16">16</option>
            <option value="17">17</option>
            <option value="18">18</option>
            <option value="19">19</option>
            <option value="20">20</option>
            <option value="21">21</option>
            <option value="22">22</option>
            <option value="23">23</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Type">Type of Event:</label><br>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Type" value="Public" checked>
            <label class="form-check-label" asp-for="Type" for="Public">Public</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Type" value="Private">
            <label class="form-check-label" asp-for="Type" for="Private">Private</label>
        </div>
        <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Duration">Duration</label>
        <input asp-for="Duration" type="number" min="1" max="4" class="form-control" placeholder="Enter Duration in hours">
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" type="text" class="form-control" placeholder="Max 50 characters">
    </div>
    <div class="form-group">
        <label asp-for="OtherDetails">Other Details</label>
        <input asp-for="OtherDetails" type="text" class="form-control" placeholder="Max 500 characters">
    </div>
    <div class="form-group">
        <label asp-for="InviteByEmail">InviteByEmail</label>
        <input asp-for="InviteByEmail" type="text" class="form-control">
    </div>
    <br />
    <div class="form-group">
        <input asp-for="CreatedBy" value="@Model.CreatedBy" hidden />
        <button type="submit" class="btn btn-primary" asp-controller="Event" asp-action="Edit">Submit</button>
    </div>



</form>
